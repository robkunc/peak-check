# Database - Update with your PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/peakcheck?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# Email Configuration (for magic link authentication)
# Example using Gmail:
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_FROM="noreply@yourdomain.com"

# OR use Resend (recommended for production):
# EMAIL_SERVER_USER="resend"
# EMAIL_SERVER_PASSWORD="re_xxx_your_api_key"
# EMAIL_SERVER_HOST="smtp.resend.com"
# EMAIL_SERVER_PORT="465"
# EMAIL_FROM="onboarding@resend.dev"

# Optional: Google OAuth (remove these lines if not using)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Firecrawl API (will be needed in Phase 4)
FIRECRAWL_API_KEY=""

# Cron Job Secret (for securing background job endpoints)
# Generate with: openssl rand -base64 32
CRON_SECRET=""


